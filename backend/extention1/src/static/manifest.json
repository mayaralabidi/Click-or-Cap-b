{
  "name": "ClickorCap",
  "short_name": "ClickorCap",
  "author": "FrostCo",
  "manifest_version": 3,
  "version": "3.0.0",
  "description": "Advanced Profanity Filter helps to clean up bad language on the websites you and your family visit.",
  "icons": {
    "16": "img/custom_logo.jpg",
    "48": "img/custom_logo.jpg",
    "128": "img/custom_logo.jpg"
  },
  "permissions": ["contextMenus", "notifications", "storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["web-filter.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "options_ui": {
    "open_in_tab": true,
    "page": "option-page.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "19": "img/custom_logo.jpg",
      "38": "img/custom_logo.jpg"
    },
    "default_title": "ClickorCap",
    "default_popup": "popup.html"
  }
}
